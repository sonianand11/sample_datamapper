source 'https://rubygems.org'

RAILS_VERSION = '~> 3.1.0'
DM_VERSION    = '~> 1.2.0'

gem 'activesupport',  RAILS_VERSION, :require => 'active_support'
gem 'actionpack',     RAILS_VERSION, :require => 'action_pack'
gem 'actionmailer',   RAILS_VERSION, :require => 'action_mailer'
gem 'activeresource', RAILS_VERSION, :require => 'active_resource'
gem 'railties',       RAILS_VERSION, :require => 'rails'
gem 'tzinfo',         '~> 0.3.32'

#Behave like rails
gem 'dm-rails',               '~> 1.2.1'

#SQLite adapter
gem 'dm-sqlite-adapter', DM_VERSION

#Rails migrations Utility
gem 'dm-migrations',   DM_VERSION

#Data types
gem 'dm-types',        DM_VERSION

#For relation
gem 'dm-aggregates',   DM_VERSION

#For errors and valiation
gem 'dm-validations',  DM_VERSION

#Upload image using paperclip style
gem 'dm-paperclip', "~> 2.5.0"

#For pagination
gem "kaminari", "~> 0.15.1"

#For ElasticSearch
#Note : This gem is renamed with retire, becuase of elasticsearch compatiablity
gem "tire", "~> 0.6.0"
